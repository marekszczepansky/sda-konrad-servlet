<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <!-- Konfiguracja H2 - baza danych w pamięci, działa zawsze, dane znikają po zamknięciu aplikacji -->
    <persistence-unit name="PU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test1;INIT=RUNSCRIPT FROM 'classpath:sda.sql'"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.default_schema" value="sda"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
    <!-- Konfiguracja MySQL - wymaga uruchomionego servera -->
    <persistence-unit name="PUmysql">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sda"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <!-- TODO: zmienić hasło -->
            <property name="javax.persistence.jdbc.user" value="test"/>
            <property name="javax.persistence.jdbc.password" value="marek123"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
             <!-- TODO: wybrać schamet odpowiednie dla włąsnej bazy danych -->
            <property name="hibernate.default_schema" value="sda"/>

            <!-- TODO: dostosować do potrzeb, drop-and-create będzie przy każdym starcie czyścić bazę danych -->
            <!--<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

